<odoo>
    <data>

        <record id="account_invoicing_policy_form" model="ir.ui.view">
            <field name="name">account_invoicing_policy.form</field>
            <field name="model">account.invoicing.policy</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="dac"/>
                            <field name="pac"/>
                            <field name="fac"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_invoicing_policy_tree" model="ir.ui.view">
            <field name="name">account_invoicing_policy.tree</field>
            <field name="model">account.invoicing.policy</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>